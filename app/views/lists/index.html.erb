<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th> | </th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td> | </td>
        <td><%= list.description %></td>
        <td> | </td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% if @lists.blank? %>
          <h4>There are no lists containing the term <%= params[:search] %>.</h4>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, remote: true %>

